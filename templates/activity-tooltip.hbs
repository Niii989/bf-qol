<section class="content">
	<section class="header">
		<div class="icon-wrapper">
			<img class="circular icon item-icon" src="{{ item.img }}" alt="{{ item.name }}">
			<img class="circular icon activity-icon" src="{{ activity.img }}" alt="{{ activity.name }}">
		</div>
		<div class="name">
			<span class="name">{{ item.name }}</span>
		</div>
		<div class="activity-name">
			<span class="activity-name">{{ activity.name }}</span>
		</div>
	</section>
	<section class="description">{{{ description }}}</section>
	{{#if tags.length}}
	<ul class="tags unlist">
		{{#each tags}}
		<li class="tag {{ key }}">{{{ label }}}</li>
		{{/each}}
	</ul>
	{{/if}}
</section>